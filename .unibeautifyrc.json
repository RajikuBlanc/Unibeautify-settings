{
  "HTML": {
    "indent_size": 2,
    "indent_char": " ",
    "wrap_line_length": 120,
    "wrap_prose": "always",
    "force_indentation": true,
    "indent_inner_html": true,
    "quotes": "double",
    "beautifiers": [
      "Prettier"
    ]
  },
  "css":{
    "indent_size": 2,
    "indent_char": " ",
    "wrap_line_length": 120,
    "wrap_prose": "always",
    "end_with_newline": true,
    "quotes": "double",
    "remove_trailing_whitespace": true,
    "no_leading_zero": true,
    "beautifiers": [
      "stylelint",
      "Prettier",
      "Pretty Diff"
    ]
  },
  "scss":{
    "indent_size": 2,
    "indent_char": " ",
    "wrap_line_length": 120,
    "wrap_prose": "always",
    "end_with_newline": true,
    "quotes": "double",
    "no_leading_zero": true,
    "remove_trailing_whitespace": true,
    "beautifiers": [
      "stylelint",
      "Prettier",
      "Pretty Diff"
    ]
  },
  "JavaScript":{
    "indent_size": 2,
    "indent_char": " ",
    "wrap_line_length": 120,
    "wrap_prose": "always",
    "end_with_newline": true,
    "end_with_semicolon": true,
    "jslint_happy": true,
    "quotes": "double",
    "remove_trailing_whitespace": true,
    "space_after_anon_function": true,
    "space_before_conditional": true,
    "space_in_paren": true,
    "beautifiers": [
      "Prettier"
    ]
  },
  "JSX":{
    "indent_size": 2,
    "indent_char": " ",
    "wrap_line_length": 120,
    "wrap_prose": "always",
    "end_with_comma": true,
    "end_with_newline": true,
    "end_with_semicolon": true,
    "jslint_happy": true,
    "quotes": "double",
    "remove_trailing_whitespace": true,
    "space_after_anon_function": true,
    "space_before_conditional": true,
    "space_in_paren": true,
    "beautifiers": [
      "Prettier"
    ]
  }
}
